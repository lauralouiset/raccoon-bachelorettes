{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./types.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    ".next",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".eslintrc.js",
    "src/data/men.ts",
    "src/data/stats.ts"
  ]
}
